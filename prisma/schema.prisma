generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String   @db.VarChar(100)
  email      String   @unique @db.VarChar(100)
  password   String   @db.VarChar(200)
  role       String   @db.VarChar(50)
  created_at DateTime @default(now()) @db.Timestamp()
  updated_at DateTime @updatedAt @db.Timestamp()

  @@map("users")
}

model Blogs {
  id         Int        @id @default(autoincrement())
  title      String     @db.VarChar(255)
  resume     String     @db.Text
  article    String     @db.Text
  author     String     @db.VarChar(100)
  category   String     @db.VarChar(100)
  cover      String?    @db.Text
  slug       String     @unique @db.VarChar(255)
  comments   Comments[]
  created_at DateTime   @default(now()) @db.Timestamp()
  updated_at DateTime   @updatedAt @db.Timestamp()

  @@map("blogs")
}

model Comments {
  id         Int      @id @default(autoincrement())
  blog       Blogs    @relation(fields: [blog_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  blog_id    Int
  name       String   @db.VarChar(100)
  email      String   @db.VarChar(100)
  content    String   @db.Text
  created_at DateTime @default(now()) @db.Timestamp()
  updated_at DateTime @updatedAt @db.Timestamp()

  @@map("comments")
}

model Portfolio {
  id           Int      @id @default(autoincrement())
  company_name String   @db.VarChar(100)
  company_logo String?  @db.Text
  software     String?  @db.VarChar(255)
  country      String   @db.VarChar(100)
  description  String   @db.Text
  created_at   DateTime @default(now()) @db.Timestamp()
  updated_at   DateTime @updatedAt @db.Timestamp()

  @@map("portfolios")
}

model Reviews {
  id         Int      @id @default(autoincrement())
  name       String   @db.VarChar(100)
  review     String   @db.Text
  company    String   @db.VarChar(100)
  country    String   @db.VarChar(100)
  created_at DateTime @default(now()) @db.Timestamp()
  updated_at DateTime @updatedAt @db.Timestamp()

  @@map("reviews")
}

model LinkSocialMedia {
  id     Int     @id @default(autoincrement())
  label  String  @db.VarChar(100)
  active Boolean @default(false)
  url    String  @db.Text

  @@map("link_social_media")
}

model ServiceFee {
  id   Int    @id @default(autoincrement())
  code String @db.VarChar(100)
  sort Int
  fee  Float  @default(0)

  @@map("service_fee")
}
